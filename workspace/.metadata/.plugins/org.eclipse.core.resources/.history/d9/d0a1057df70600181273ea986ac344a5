		    	b.setAddress(rs.getString("address"));
		    	b.setPassword(rs.getString("password"));
		    	Blob blob = rs.getBlob("dp");
		        byte[] byteArray = blob.getBytes(1, (int)blob.length());
		     	b.setDp(byteArray);
		    	b.setSub_amt(rs.getInt("sub_amt"));
